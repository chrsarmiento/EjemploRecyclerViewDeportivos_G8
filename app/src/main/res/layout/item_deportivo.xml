<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDeportivo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clDeportivo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true">
            
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imPhotoDeportivo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@color/cardview_dark_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvModeloDeportivo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Modelo"
                android:textSize="20dp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/imPhotoDeportivo"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFabricanteDeportivo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Fabricante"
                android:textSize="16dp"
                android:textStyle="normal"
                android:ellipsize="end"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvModeloDeportivo"
                app:layout_constraintStart_toEndOf="@id/imPhotoDeportivo"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivPaisDeportivo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textStyle="italic"
                android:ellipsize="end"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tvFabricanteDeportivo"
                app:layout_constraintStart_toEndOf="@id/imPhotoDeportivo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>